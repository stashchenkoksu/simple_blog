<!DOCTYPE html>
<html>
  <head>
    <title>NewsPortal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
     </head>

  <body>
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">Stashchenkoksu</h5>
    <nav class="my-2 my-md-0 mr-md-r3">
      <span class="p-2 text-dark"><%= link_to "Main page",home_path %></span>
      <span class="p-2 text-dark"><%= link_to "About us",about_path %></span>
      <span class="p-2 text-dark"><%= link_to "Add post",new_post_path %></span>
    </nav>

  </div>
  <div class="container">
    <%= yield %>
  </div>

  </body>
</html>
